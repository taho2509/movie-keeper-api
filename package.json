{
  "name": "movie-keeper-api",
  "version": "1.0.0",
  "description": "Base REST api web server built using Koa framework, typescript, clean arquitecture and some good practices",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "npx tsc -p tsconfig.prod.json",
    "start": "node -r dotenv/config dist/index.js",
    "prestart": "npm run build",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "start:test": "ts-node src/index.ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "coverage": "jest --coverage",
    "newman": "newman run postman_collection/movie-keeper-api.postman_collection.json --bail",
    "stubby": "node node_modules/stubby/bin/stubby -d stubs/dependencies.yaml -s 4000 -t 8084 -a 8893",
    "functional-test": "ts-node functional/index.ts"
  },
  "author": "Angel Ulice Tabares Gonzalez <taho2509@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "axios": "^0.21.0",
    "cls-hooked": "^4.2.2",
    "correlation-id": "^4.0.0",
    "dotenv": "^8.2.0",
    "http-status-codes": "^2.1.4",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "mongoose": "^5.11.5",
    "node-nats-streaming": "^0.3.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^2.2.4",
    "@types/cls-hooked": "^4.3.1",
    "@types/jest": "^26.0.18",
    "@types/js-yaml": "^3.12.5",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.2",
    "@types/mongoose": "^5.10.2",
    "@types/newman": "^5.1.1",
    "@types/npm": "^2.0.31",
    "@types/stubby": "^4.1.0",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "jest": "^25.5.4",
    "js-yaml": "^3.14.1",
    "mongodb-memory-server": "^6.9.2",
    "newman": "^5.2.1",
    "nodemon": "^2.0.6",
    "npm": "^6.14.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "stubby": "^5.0.0",
    "ts-jest": "^25.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.7"
  }
}
