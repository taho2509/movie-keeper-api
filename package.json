{
  "name": "movie-keeper-api",
  "version": "1.0.0",
  "description": "Base REST api web server built using Koa framework, typescript, clean arquitecture and some good practices",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "npx tsc -p tsconfig.prod.json",
    "start": "node -r dotenv/config dist/index.js",
    "prestart": "npm run build",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "start:test": "ts-node src/index.ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "coverage": "jest --coverage",
    "newman": "newman run postman_collection/movie-keeper-api.postman_collection.json --bail",
    "stubby": "node node_modules/stubby/bin/stubby -d stubs/dependencies.yaml -s 4000 -t 8084 -a 8893",
    "functional-test": "ts-node functional/index.ts"
  },
  "author": "Angel Ulice Tabares Gonzalez <taho2509@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "axios": "^0.19.2",
    "cls-hooked": "^4.2.2",
    "correlation-id": "^3.1.1",
    "dotenv": "^8.2.0",
    "http-status-codes": "^1.4.0",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8",
    "mongoose": "^5.9.15",
    "node-nats-streaming": "^0.3.2",
    "uuid": "^8.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^2.2.2",
    "@types/cls-hooked": "^4.3.0",
    "@types/jest": "^25.2.3",
    "@types/js-yaml": "^3.12.4",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.1",
    "@types/mongoose": "^5.7.20",
    "@types/newman": "^4.5.0",
    "@types/npm": "^2.0.31",
    "@types/stubby": "^4.1.0",
    "@types/uuid": "^7.0.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "js-yaml": "^3.13.1",
    "mongodb-memory-server": "^6.6.0",
    "newman": "^5.0.1",
    "nodemon": "^2.0.4",
    "npm": "^6.14.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "stubby": "^4.1.0",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  }
