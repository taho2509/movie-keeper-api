{
  "name": "movie-keeper-api",
  "version": "1.0.0",
  "description": "Base REST api web server built using Koa framework, typescript, clean arquitecture and some good practices",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "npx tsc -p tsconfig.prod.json",
    "start": "node -r dotenv/config dist/index.js",
    "prestart": "npm run build",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "start:test": "ts-node src/index.ts",
    "test": "jest --forceExit",
    "test:dev": "jest --watchAll",
    "coverage": "jest --coverage",
    "newman": "newman run postman_collection/movie-keeper-api.postman_collection.json --bail",
    "stubby": "node node_modules/stubby/bin/stubby -d stubs/dependencies.yaml -s 4000 -t 8084 -a 8893"
  },
  "author": "Angel Ulice Tabares Gonzalez <taho2509@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "axios": "^0.25.0",
    "cls-hooked": "^4.2.2",
    "correlation-id": "^4.0.0",
    "dotenv": "^14.2.0",
    "http-graceful-shutdown": "^3.1.5",
    "http-status-codes": "^2.2.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.1.1",
    "mongoose": "^6.1.7",
    "node-nats-streaming": "^0.3.2",
    "uuid": "^8.3.2",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.0",
    "@shopify/jest-koa-mocks": "^3.1.0",
    "@types/cls-hooked": "^4.3.3",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.1.1",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-router": "^7.4.4",
    "@types/mongodb": "^4.0.7",
    "@types/newman": "^5.1.4",
    "@types/nock": "^11.1.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "newman": "^5.3.1",
    "nock": "^13.2.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "stubby": "^5.1.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
